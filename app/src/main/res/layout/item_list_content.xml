<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/imageViewCharacter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,19:13"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCharacterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/marvel_grey_transparent"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/imageViewCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewCharacter"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="@drawable/ripple"
        app:layout_constraintBottom_toBottomOf="@id/imageViewCharacter"
        app:layout_constraintEnd_toEndOf="@id/imageViewCharacter"
        app:layout_constraintStart_toStartOf="@id/imageViewCharacter"
        app:layout_constraintTop_toTopOf="@id/imageViewCharacter" />

</androidx.constraintlayout.widget.ConstraintLayout>